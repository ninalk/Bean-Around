<%- include('../partials/header') %>

  <div class="main-content form-page">
    <a href="/beans" class="my-bean-link">MY BEANS</a>
    <a href="/beans/new" class="add-bean-link">ADD BEAN</a>
    <section class="display-container">
      <h1>Edit Bean Form</h1>
      <form class="new-form" action="/beans/<%= bean._id %>?_method=PUT" method="POST">
        <label>Roaster:</label>
        <input value="<%= bean.roaster %>" name="roaster"><br>
        <label>Blend Name:</label>
        <input value="<%= bean.blendName %>" name="blendName"><br>
        <label>Region:</label>
        <input value="<%= bean.region %>" name="region"><br>
        <label>Taste Notes:</label>
        <input value="<%= bean.description %>" name="description"><br>
        <label>Roast:</label>
        <select name="roast">
          <% if (bean.roast === "light") { %>
            <option value="light" selected>light</option>         
          <% } else if (bean.roast === "medium") { %>
            <option value="medium" selected>medium</option>
          <% } else if (bean.roast === "dark") { %>
            <option value="dark">dark</option>
          <% } %>
        </select><br>
        <label class="certs">Certifications:</label><br>
        <% if (bean.fairTrade) { %>
          <input type="checkbox" class="cb" id="fair-trade" name="fairTrade" checked>
        <% } else { %>
          <input type="checkbox" class="cb" id="fair-trade" name="fairTrade">
        <% } %>
        <label for="fair-trade" class="cblabel">Fair Trade</label><br>
        <% if (bean.usdaOrganic) { %>
          <input type="checkbox" class="cb" id="usda-organic" name="usdaOrganic" checked>
        <% } else { %>
          <input type="checkbox" class="cb" id="usda-organic" name="usdaOrganic">
        <% } %>
        <label for="usda-organic" class="cblabel">USDA Organic</label><br>
        <% if (bean.utzCertified) { %>
          <input type="checkbox" class="cb" name="utzCertified" checked>
        <% } else { %>
          <input type="checkbox" class="cb" name="utzCertified">
        <% } %>
        <label for="utz-certified" class="cblabel">UTZ Certified</label><br>
        <% if (bean.rainforestAlliance) { %>
          <input type="checkbox" class="cb" id="rainforest-alliance" name="rainforestAlliance" checked>
        <% } else { %>
          <input type="checkbox" class="cb" id="rainforest-alliance" name="rainforestAlliance">
        <% } %>
        <label for="rainforest-alliance" class="cblabel">Rainforest Alliance</label><br>
        <% if (bean.smithsonianBF) { %>
          <input type="checkbox" class="cb" id="smithsonian" name="smithsonianBF" checked>
        <% } else { %>
        <label for="smithsonian" class="cblabel">Smithsonian Bird Friendly</label><br>
        <% } %>
        <input class="edit-bean" type="submit" value="Edit Bean">   
      </form>
    </section>
  </div>

<%- include('../partials/footer') %>